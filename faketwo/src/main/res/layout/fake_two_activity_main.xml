<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/fake_two_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/fake_two_main_navigation"
        android:background="@color/fakeTwoColorBar"
        app:itemIconTint="@color/fake_two_menu_item_color"
        app:itemTextColor="@color/fake_two_menu_item_color"
        app:menu="@menu/fake_two_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.BottomNavigationView>
</LinearLayout>